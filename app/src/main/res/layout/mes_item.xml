<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@drawable/common_google_signin_btn_icon_dark_normal_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="354dp"
            android:layout_height="132dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="121dp"
                android:layout_height="122dp"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                app:layout_constraintEnd_toStartOf="@+id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" />

            <TextView
                android:id="@+id/name"
                android:layout_width="210dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/image"
                android:fontFamily="@font/bungee_inline"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text"
                android:layout_width="207dp"
                android:layout_height="85dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginBottom="1dp"

                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/image"
                android:fontFamily="@font/bungee_inline"
                android:paddingRight="40dp"
                android:text="привет я петя это тест пролплоп"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/image"
                app:layout_constraintTop_toTopOf="@+id/name" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>